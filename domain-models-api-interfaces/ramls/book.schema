{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title": "Book schema",
  "description": "Book information including title, description, genre, author, and link",
  "type":"object",
  "properties":{
    "data":{
      "type":"object",
      "properties":{
        "_id":{
          "type":"string"
        },
        "title":{
          "type":"string"
        },
        "description":{
          "type": "string"
        },
        "datetime":{
          "type":"object",
          "properties":{
            "$date":{
              "type":"string"
            }
          }
        },
        "genre":{
          "type":"string"
        },
        "author":{
          "type":"string"
        },
        "link":{
          "type":"string"
        }
      },
      "required":[
        "title",
        "description",
        "genre",
        "author",
        "link"
      ]
    },
    "_id":{
      "type":"string"
    },
    "success":{
      "type":"boolean",
      "readonly" : false
    },
    "image":{
      "type":"string"
    },
    "status":{
      "type":"integer"
    },
    "metadata": {
      "$ref": "raml-util/schemas/metadata.schema",
      "readonly" : true
    },
    "resultInfo": {
      "$ref": "raml-util/schemas/resultInfo.schema",
      "readonly" : true
    }
  },
  "additionalProperties": false,
  "required":[
    "data",
    "success",
    "status"
  ]
}
